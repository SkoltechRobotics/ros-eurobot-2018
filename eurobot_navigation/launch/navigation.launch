<?xml version="1.0"?>
<launch>
  <!-- Map server -->
  <!--arg name="map_file" default="$(find eurobot_navigation)/map/field.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"  output="screen" /-->
  <node name="map_server" pkg="eurobot_navigation" type="map_server.py"  output="screen" />

  <!-- Obstacles for teb_local_planner - comment if other planner is used -->
  <!--node name="obstacle_publisher" pkg="eurobot_navigation" type="obstacle_publisher.py"  output="screen"/-->

  <!-- MAIN ROBOT -->
  <group ns="main_robot">

    <!-- Visualization of the path in form of poses -->
    <node name="path_posearray_posearray" pkg="eurobot_navigation" type="path_posearray.py"  output="screen"/>

    <!-- Move base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <rosparam file="$(find eurobot_navigation)/config/global_costmap_params_main_robot.yaml" command="load" />
      <rosparam file="$(find eurobot_navigation)/config/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find eurobot_navigation)/config/global_planner_params.yaml" command="load" />
      <!-- This is actually a void local planner. It is only needed to run move_base. -->
      <rosparam file="$(find eurobot_navigation)/config/carrot_local_planner_params.yaml" command="load" />
      <param name="recovery_behavior_enabled" value="False" />
      <remap from="cmd_vel" to="cmd_vel_void"/>
      <remap from="odom" to="odom"/>
      <remap from="map" to="map"/>
      <remap from="/people" to="people"/>
    </node>
    <!-- Custom local path planner writen in python -->
    <node name="path_follower" pkg="eurobot_navigation" type="follow.py" output="screen"/>

  </group>

  <!-- SECONDARY ROBOT -->
  <group ns="secondary_robot">

    <!-- Visualization of the path in form of poses -->
    <node name="path_posearray_posearray" pkg="eurobot_navigation" type="path_posearray.py"  output="screen"/>

    <!-- Move base -->
    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
      <rosparam file="$(find eurobot_navigation)/config/global_costmap_params_secondary_robot.yaml" command="load" />
      <rosparam file="$(find eurobot_navigation)/config/local_costmap_params.yaml" command="load" />
      <rosparam file="$(find eurobot_navigation)/config/global_planner_params.yaml" command="load" />
      <!-- This is actually a void local planner. It is only needed to run move_base. -->
      <rosparam file="$(find eurobot_navigation)/config/carrot_local_planner_params.yaml" command="load" />
      <param name="recovery_behavior_enabled" value="False" />
      <remap from="cmd_vel" to="cmd_vel_void"/>
      <remap from="odom" to="odom"/>
      <remap from="map" to="map"/>
      <remap from="/people" to="people"/>
    </node>
    <!-- Custom local path planner writen in python -->
    <node name="path_follower" pkg="eurobot_navigation" type="follow.py" output="screen"/>

  </group>

</launch>
