<?xml version="1.0"?>
<launch>
  <!-- Map server -->
  <arg name="map_file" default="$(find eurobot_navigation)/map/field.yaml"/>
  <!--node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)"  output="screen" /-->
  <node name="map_server1" pkg="eurobot_navigation" type="map_server.py"  output="screen" />
  <!--node name="obstacle_publisher" pkg="eurobot_navigation" type="obstacle_publisher.py"  output="screen"/-->
  <node name="path_posearray" pkg="eurobot_navigation" type="path_posearray.py"  output="screen"/>

  <!-- Place map frame at odometry frame -->
  <node pkg="tf" type="static_transform_publisher" name="world_map_broadcaster_nav" args="0 0 0 0 0 0 world map 100"/>

  <!-- Move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find eurobot_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find eurobot_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find eurobot_navigation)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find eurobot_navigation)/config/global_costmap_params.yaml" command="load" />

    <rosparam file="$(find eurobot_navigation)/config/global_planner_params.yaml" command="load" />
    <rosparam file="$(find eurobot_navigation)/config/carrot_local_planner_params.yaml" command="load" />
    <remap from="cmd_vel" to="main_robot/cmd_vel1"/>
    <remap from="odom" to="main_robot/odom"/>

  </node>

  <node name="path_follower" pkg="eurobot_navigation" type="follow.py" output="screen"/>

</launch>
