<?xml version="1.0"?>
<launch>

  <rosparam file="$(find eurobot)/config/field_params.yaml" command="load" ns="field" />
  <rosparam file="$(find eurobot)/config/particle_filter_params.yaml" command="load" ns="main_robot/particle_filter" />
  <rosparam file="$(find eurobot)/config/main_robot_params.yaml" command="load" ns="main_robot" />
  <rosparam file="$(find eurobot)/config/secondary_robot_params.yaml" command="load" ns="secondary_robot" />

  <group ns="main_robot">

    <!-- NODES -->
    <node pkg="eurobot" name="stm_node" type="stm_node.py" respawn="true" output="screen"/>
    <node pkg="urg_node" name="lidar_node" type="urg_node" args="_ip_address:=192.168.0.10" respawn="true" output="screen">
      <param name="frame_id" value="/main_robot_laser"/>
    </node>
    <node pkg="eurobot" name="particle_filter_node" type="particle_filter_node.py" respawn="true" output="screen"/>

    <node pkg="eurobot" name="barrier_move_node" type="barrier_move_to_heap.py" respawn="true" output="screen"/>
  </group>
  <node pkg="eurobot_gui" name="display_node" type="display_node.py" respawn="true" output="screen"/>

</launch>
